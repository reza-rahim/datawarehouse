[Unit]
Description=Apache Hive Metastore 
After=network.target patroni.service   keycloak.service

[Service]
User={{ hive_user }}
Group={{ application_group }}
Environment=JAVA_HOME={{ java_home }}
Environment=HADOOP_HOME={{ hadoop_home }}

ExecStart=/opt/apache-hive-metastore/bin/start-metastore
Restart=on-failure

[Install]
WantedBy=multi-user.target
