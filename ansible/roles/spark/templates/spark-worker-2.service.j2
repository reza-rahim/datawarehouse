[Unit]
Description=Apache Spark Master 
After=network.target spark-master.service

[Service]
User={{ spark_user }}
Group={{ application_group }}

Environment=JAVA_HOME={{ java_home }}
Environment=HADOOP_HOME={{ hadoop_home }}
Environment=HADOOP_CLASSPATH=$($HADOOP_HOME/bin/hadoop classpath)

ExecStartPre={{ lockbox_dir }}/decrypt_lockbox.sh
ExecStart=/bin/bash -c "source {{ tmpfs_dir }}/{{ lockbox_env }};  /usr/bin/rm -f  {{ tmpfs_dir }}/*{{ lockbox_env }} ;/opt/spark/sbin/start-worker.sh  spark://{% for host in groups['spark_master'] -%} {{ host }}.{{ fqdn }}:{{ spark_rpc_port }}{% if not loop.last %},{% endif %} {%- endfor %} "

ExecStop=/opt/spark/sbin/start-worker.sh
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
